<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}MoviesUniverse{% endblock %}</title>
        {# Run `composer require symfony/webpack-encore-bundle`
           and uncomment the following Encore helpers to start using Symfony UX #}
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset("css/style.css") }}">
            <link rel="stylesheet" href="{{ asset("css/menu.css") }}">
        {% endblock %}
        <link rel="icon" href="{{ asset("img/logo_small.svg") }}">

        {% block javascripts %}
            <script src="{{ asset("js/menu.js") }}"></script>
        {% endblock %}
    </head>
    <body>
        {% include "menu.html.twig" %}
        <header>
            <a href="#" class="menuBtn"><img src="{{ asset("img/icons/menu.svg") }}" alt="Bouton de menu"></a>
            <a href="{{ path("home") }}"><img src="{{ asset("img/logo_long.svg") }}" alt="Logo de MoviesUniverse"></a>
            <a href="{{ path("search") }}"><img src="{{ asset("img/icons/search.svg") }}" alt="Bouton de recherche"></a>
        </header>
        <main>
            {% block body %}{% endblock %}
        </main>
    </body>
</html>
